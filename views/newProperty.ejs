<% layout('/layout/boilerplate') -%>
<body>
    <div class="row">
        
        <div class="col-6 offset-2">
            <br>
    <h2>Create a New Listing</h2>
    <form method="POST" action ="/Tripsy/newProperty?_method = PUT" >
        <div class="mb-3">
            <label for="Title" class= "form-label" >Title</label>
            <input id="title" type="text" name ="title" placeholder="Enter Title" class="form-control" required>
        </div>
       
        <div  class="mb-3">
            <label for="Image" class="form-label">Image url</label>
            <br>
            <input id="image" for="image" type="text" name="image" placeholder="url" class="form-control">
        </div>
        <div class="row">
        <div  class="mb-3 col-md-4">
            <label for="price col-4" class="form-label">Price</label>
            <br>
            <input id="Price"type= "number" name ="price" placeholder="Price" class="form-control" required>

        </div >
        <div  class="mb-3 col-md-8">
            <label for="country" class="form-label" >country</label>
            <br>
            <input id="country" for="country" type="text" name="country" placeholder="Country Name" class="form-control" required>
           
        </div>
    </div>
        
        <div class="mb-3">
            <label for="description" class="form-label" >description</label>
            <br>
            <textarea id="description" for="description" name="description" placeholder="Description" class="form-control" required ></textarea>
        </div>
        
        
        <div  class="mb-3">
             <label for="location" class="form-label">location</label>
             <br>
            <textarea id="location" name="location" placeholder="Address" class="form-control" required></textarea>
           
        </div >
         
        <button class="btn btn-dark mb-3 add-btn">Add</button>

    </form>
  </div>
</div>
</body>
