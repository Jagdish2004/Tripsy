<div class="custom-container">
    <div class="alert-container">
        <!-- Success flash -->
        <% if (success && success.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show popup" role="alert" id="flashMessage">
                <p><%= success[0] %></p>
            </div>
        <% } %>

        <!-- Error flash -->
        <% if (error && error.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show popup" role="alert" id="flashMessage">
                <p><%= error[0] %></p>
            </div>
        <% } %>
    </div>
</div>

<script>
    // Dismiss the alert automatically after 3 seconds
    setTimeout(function () {
        const flashMessage = document.getElementById('flashMessage');
        if (flashMessage) {
            flashMessage.classList.add('fade-out'); // Add fade-out effect
            setTimeout(() => flashMessage.remove(), 500); // Remove after fade-out
        }
    }, 3000);
</script>
